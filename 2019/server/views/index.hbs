<script type="text/javascript">
    window.onload = () => {
        console.log("loaded");

        var urlP = 'none';
        function parseQueryString(url) {
            var urlParams = {};
            url.replace(new RegExp("([^?=&]+)(=([^&]*))?", "g"),
                function ($0, $1, $2, $3) {
                    urlParams[$1] = $3;
                });
            return urlParams;
        }

        function setRSVPUrl() {
            var urlParams = parseQueryString(location.search);

            if (urlParams['invite'] != undefined) {
                urlP = urlParams['invite'];

                console.log(urlParams);

                for (const elem of document.getElementsByClassName("rsvp-btn")) {
                    elem.href = 'https://2009.mit.edu/apps/rsvp/login/' + urlParams['invite'];
                }

            } else {
                for (const elem of document.getElementsByClassName("rsvp-btn")) {
                    elem.innerHtml = "TICKET SYSTEM";
                }
            }

            // Clears the url to a blank state incase they want to share the URL
